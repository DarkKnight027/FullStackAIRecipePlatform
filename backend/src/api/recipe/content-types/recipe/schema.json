{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipe"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "blocks"
    },
    "cuisine": {
      "type": "enumeration",
      "enum": [
        "italian",
        "chinese",
        "mexican",
        "indian",
        "american",
        "thai",
        "japanese",
        "mediterranean",
        "french",
        "korean",
        "vietnamese",
        "spanish",
        "greek",
        "turkish",
        "moroccan",
        "brazilia",
        "german",
        "portuguese",
        "caribbean",
        "middle - eastern",
        "english",
        "other"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "breakfast",
        "lunch",
        "dinner",
        "snacks",
        "dessert"
      ]
    },
    "ingredients": {
      "type": "json",
      "required": true
    },
    "instructions": {
      "type": "json",
      "required": true
    },
    "imageURL": {
      "type": "string"
    },
    "isPublic": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "recipes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::recipe.recipe",
      "mappedBy": "author"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::recipe.recipe",
      "inversedBy": "recipes"
    },
    "prepTime": {
      "type": "integer"
    },
    "cookTime": {
      "type": "integer"
    },
    "servings": {
      "type": "integer"
    },
    "nutrition": {
      "type": "json"
    },
    "tips": {
      "type": "json"
    },
    "substitution": {
      "type": "json"
    },
    "saved_recipes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::saved-recipe.saved-recipe",
      "mappedBy": "recipe"
    }
  }
}
